# Server Configuration
PORT=4000
NODE_ENV=development
API_VERSION=v1

# MongoDB Configuration (Atlas)
MONGODB_URI=

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_12345
JWT_EXPIRE=7d

# Email / SMTP
EMAIL_ENABLED=true           # set true when you’re ready to send in non-dev environments
SMTP_HOST=smtpout.secureserver.net
SMTP_PORT=465                 # 465 for implicit TLS, 587 for STARTTLS
SMTP_SECURE=true             # true if you’re using port 465
SMTP_USER= 
SMTP_PASSWORD=
SMTP_FROM_NAME=SkyPrepAero Team   # whatever display name you prefer
SMTP_FROM_EMAIL= 
SMTP_VERIFY=false              # keep true to fail fast on misconfig; set false if server blocks verify
EMAIL_PREVIEW_LOG=false       # true logs Nodemailer preview URLs (useful on dev)
NEWSLETTER_CTA_URL=
EMAIL_TEMPLATE_DIR=           # optional override; omit to use src/templates

#Google Cloud Comsole
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=